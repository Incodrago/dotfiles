#!/usr/bin/env bash

# Directory with wallpapers
WALL_DIR="$HOME/.config/wallpapers"
# Current directory (to cd back to)
CWD="$(pwd)"

# Go to wallpapers directory
cd "$WALL_DIR" || exit

# Handle spaces in filenames
IFS=$'\n'

# Grab the user-selected wallpaper
SELECTED_WALL=$(for a in *.jpg *.png; do echo -en "$a\0icon\x1f$a\n" ; done | rofi -dmenu -theme ~/.config/rofi/wallpapers-config.rasi -p "Select wallpaper")

# If not empty, pass to walset-backend
if [ -n "$SELECTED_WALL" ]; then
    walset-backend "$SELECTED_WALL"
fi

# Go back to where you came from
cd "$CWD" || exit
