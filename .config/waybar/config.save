        "exec-if": "exit 0",
        "on-click": "kitty sh -c 'paru -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "tooltip": false,
    },

    "keyboard-state": {
