            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
	"tooltip": true,

	// OLD CONTROLS (left click to do every mute action, right click for pavucontrol)
	// Left click -> toggle mute
	//"on-click": "~/.config/waybar/scripts/toggle-audio-cycle.sh",
	// Right click -> open pavucontrol
	//"on-click-right": "pavucontrol"
 
	// NEW CONTROLS (left click mutes audio, right click mutes mic, middle click opens pavucontrol)
	// Left click ‚Üí toggle sink mute (speakers/headphones)
	"on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
	// Right click ‚Üí toggle source mute (microphone)
	"on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
	// Middle click (wheel click) ‚Üí open mixer
	"on-click-middle": "pavucontrol"
    },
    "custom/media": {
